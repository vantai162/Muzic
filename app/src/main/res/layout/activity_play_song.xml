<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2F48">

    <!-- Ảnh nền mờ -->
    <ImageView
        android:id="@+id/img_background_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <!-- Phần chính -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp"
        android:gravity="center_horizontal">

        <!-- Ảnh bài hát -->
        <ImageView
            android:id="@+id/img_song_play"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true" />

        <!-- Tên bài hát -->
        <TextView
            android:id="@+id/tv_song_title_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Believer"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <!-- Nghệ sĩ -->
        <TextView
            android:id="@+id/tv_song_artist_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruth B."
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="24dp"/>

        <!-- SeekBar tròn (dùng thư viện hoặc custom) -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#FF6200EE"
            android:thumbTint="#FF6200EE"
            />

        <!-- Thời gian -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:30"
                android:textColor="#FFFFFF"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:30"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Nút điều khiển -->
        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Nút Shuffle -->
            <ImageView
                android:id="@+id/btn_shuffle"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Shuffle"
                android:padding="8dp"
                android:rotation="0"
                android:rotationX="0"
                android:rotationY="0"
                android:scaleType="centerInside"
                android:src="@drawable/shuffle"
                android:tint="#FFFFFF" />

            <!-- Nút Previous -->
            <ImageView
                android:id="@+id/btn_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous"
                android:padding="8dp"
                android:src="@drawable/rewind_button"
                android:tint="#FFFFFF" />

            <!-- Nút Play/Pause -->
            <ImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play or Pause"
                android:padding="8dp"
                android:src="@drawable/play_button_arrowhead"
                android:tint="#FFFFFF" />

            <!-- Nút Next -->
            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next"
                android:padding="8dp"
                android:src="@drawable/forward_button"
                android:tint="#FFFFFF" />

            <!-- Nút Repeat -->
            <ImageView
                android:id="@+id/btn_repeat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Repeat"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/repeat"
                android:tint="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
