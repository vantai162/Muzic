<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">72dp</item>
        <item name="shapeAppearanceOverlay">@style/ToggleShape</item>
        <item name="android:textColor">@color/selector_toggle_text</item>
        <item name="backgroundTint">@color/selector_toggle_background</item>
        <item name="rippleColor">#33FFFFFF</item>
        <item name="strokeColor">@color/textSec</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ToggleShape" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>